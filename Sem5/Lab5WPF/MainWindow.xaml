<Window x:Class="WPFLab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLab5"
        mc:Ignorable="d"
        Title="WPFLab5" Height="450" Width="800"  MinHeight="350" MinWidth="250">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <TextBox Name="TBoxWorkArea"  IsReadOnly="True" Grid.ColumnSpan="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Grid.Row="0" Style="{StaticResource BasedStyle}"/>
        <TextBox Name="TBoxResult"  IsReadOnly="True" Grid.ColumnSpan="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Grid.Row="1" />
        <Button Name="BttnClear"  Grid.RowSpan="2" Grid.Column="2" Click="BttnClear_Click">C</Button>
        <Button Name="BttnErase"  Grid.RowSpan="2" Grid.Column="3" Click="BttnErase_Click">CE</Button>
        <Button Name="Bttn1"  Grid.Row="2" Click="BttnNum_Click"  >1</Button>
        <Button Name="Bttn2"  Grid.Column="1" Grid.Row="2" Click="BttnNum_Click" >2</Button>
        <Button Name="Bttn3"  Grid.Column="2" Grid.Row="2" Click="BttnNum_Click">3</Button>
        <Button Name="BttnPlus"  Grid.Column="3" Grid.Row="2" Click="BttnPlus_Click">+</Button>
        <Button Name="Bttn4"  Grid.Row="3" Click="BttnNum_Click" >4</Button>
        <Button Name="Bttn5"  Grid.Column="1" Grid.Row="3" Click="BttnNum_Click" >5</Button>
        <Button Name="Bttn6"  Grid.Column="2" Grid.Row="3" Click="BttnNum_Click">6</Button>
        <Button Name="BttnMinus"  Grid.Column="3" Grid.Row="3" Click="BttnMinus_Click">-</Button>
        <Button Name="Bttn7"  Grid.Row="4" Click="BttnNum_Click" >7</Button>
        <Button Name="Bttn8"  Grid.Column="1" Grid.Row="4" Click="BttnNum_Click" >8</Button>
        <Button Name="Bttn9"  Grid.Column="2" Grid.Row="4" Click="BttnNum_Click">9</Button>
        <Button Name="BttnMultiply"  Grid.Column="3" Grid.Row="4" Click="BttnMultiply_Click">*</Button>
        <Button Name="BttnDot"  Grid.Row="5" Click="BttnDot_Click" >.</Button>
        <Button Name="Bttn0" Grid.Column="1" Grid.Row="5" Click="BttnNum_Click" >0</Button>
        <Button Name="BttnResult"  Grid.Column="2" Grid.Row="5" Click="BttnResult_Click">=</Button>
        <Button Name="BttnDiv"  Grid.Column="3" Grid.Row="5" Click="BttnDiv_Click">/</Button>
        <Menu Grid.Row="6" Grid.ColumnSpan="4" Height="40">

            <Button Click="Button_Click" Content="Blue">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="Blue.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
            <Button Click="Button_Click_1">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="MSDNSample.xaml"/>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
            <Button Content="Reset" Width="100" Height="30" Click="Button_Click_2"/>
            <ComboBox x:Name="cbox" SelectionChanged="Cbox_SelectionChanged">
                <ComboBoxItem Content="16" Background="#FFF01313"/>
                <ComboBoxItem Content="24" Background="#FF191717"/>
                <ComboBoxItem Content="36" Background="#FF52D33E"/>
            </ComboBox>
        </Menu>
    </Grid>
</Window>
