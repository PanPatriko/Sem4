<Window x:Class="WPFLab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLab1"
        mc:Ignorable="d"
        Title="WPFLab1 Calculator" Height="450" Width="800" MinHeight="350" MinWidth="250" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBox Name="TBoxWorkArea"  IsReadOnly="True" FontSize="24" Grid.ColumnSpan="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Grid.Row="0">
        </TextBox>
        <TextBox Name="TBoxResult"  IsReadOnly="True" FontSize="24" Grid.ColumnSpan="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Grid.Row="1">
        </TextBox>
        <Button Name="BttnClear" FontSize="24" Grid.RowSpan="2" Grid.Column="2" Click="BttnClear_Click">C</Button>
        <Button Name="BttnErase" FontSize="24" Grid.RowSpan="2" Grid.Column="3" Click="BttnErase_Click">CE</Button>
        <Button Name="Bttn1"  FontSize="24" Grid.Row="2" Click="Bttn1_Click" >1</Button>
        <Button Name="Bttn2" FontSize="24" Grid.Column="1" Grid.Row="2" Click="Bttn2_Click">2</Button>
        <Button Name="Bttn3" FontSize="24" Grid.Column="2" Grid.Row="2" Click="Bttn3_Click">3</Button>
        <Button Name="BttnPlus" FontSize="24" Grid.Column="3" Grid.Row="2" Click="BttnPlus_Click">+</Button>
        <Button Name="Bttn4" FontSize="24" Grid.Row="3" Click="Bttn4_Click">4</Button>
        <Button Name="Bttn5" FontSize="24" Grid.Column="1" Grid.Row="3" Click="Bttn5_Click">5</Button>
        <Button Name="Bttn6" FontSize="24" Grid.Column="2" Grid.Row="3" Click="Bttn6_Click">6</Button>
        <Button Name="BttnMinus" FontSize="24" Grid.Column="3" Grid.Row="3" Click="BttnMinus_Click">-</Button>
        <Button Name="Bttn7" FontSize="24" Grid.Row="4" Click="Bttn7_Click">7</Button>
        <Button Name="Bttn8" FontSize="24" Grid.Column="1" Grid.Row="4" Click="Bttn8_Click">8</Button>
        <Button Name="Bttn9" FontSize="24" Grid.Column="2" Grid.Row="4" Click="Bttn9_Click">9</Button>
        <Button Name="BttnMultiply" FontSize="24" Grid.Column="3" Grid.Row="4" Click="BttnMultiply_Click">*</Button>
        <Button Name="BttnDot" FontSize="24" Grid.Row="5" Click="BttnDot_Click">.</Button>
        <Button Name="Bttn0" FontSize="24" Grid.Column="1" Grid.Row="5" Click="Bttn0_Click">0</Button>
        <Button Name="BttnResult" FontSize="24" Grid.Column="2" Grid.Row="5" Click="BttnResult_Click">=</Button>
        <Button Name="BttnDiv" FontSize="24" Grid.Column="3" Grid.Row="5" Click="BttnDiv_Click">/</Button>
    </Grid>
</Window>
